{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "lib": [
            "dom",
            "esnext"
        ],
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "webpack.*.js",
        "*.config.js",
        "*.test.ts*"
    ],
}
.trailerModal
    margin: 3% 5%
    width: 90%
    height: 90%

.traileriframe
    width: 70%
    height: 80%
    margin-left: 14%
    box-shadow 0px 0px 10px 5px rgb(51, 50, 50)
    @media screen and (min-width: 300px) and (orientation: portrait)
        width: 100%
        height: 50%
        margin-left: 0%

.trailerCloseButton
    margin-left: 84%
    @media screen and (min-width: 300px) and (orientation: portrait)
        margin-left: 90%

.trailerCloseIcon
    box-shadow 0px 0px 10px 5px rgb(90, 87, 87)
    border-radius: 50% 50%

.trailerOuterBody
    height: 100%

.traileriframeBody
    height: 100%

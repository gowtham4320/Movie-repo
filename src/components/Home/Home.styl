.outerBody
  height: 100%
  width: 100%
.innerBody
    border-radius: 10px
    height 80%
    // overflow: auto
    margin: 2% 5% 0% 5%
    //background: rgb(53, 45, 45)
    //box-shadow 0px 0px 10px 1px black
    visibility: hidden
    &.beforeSearch
        visibility: hidden
        animation: fadeout 0.8s;
    &.afterSearch
        visibility: visible
        animation: fadein 0.8s;

.searchDiv
    padding: 10%
    transition: 1s ease-in
    &.searchedDiv
        padding: 2% 2% 0% 2%
        
 
.search
    width: 100%
    .MuiInputBase-input 
      color: white !important;
    .MuiOutlinedInput-root
      &:hover .MuiOutlinedInput-notchedOutline
        border-color: rgb(158, 155, 155)
      &.Mui-focused .MuiOutlinedInput-notchedOutline
        border-color: rgb(186, 182, 182)
    .MuiOutlinedInput-root .MuiOutlinedInput-notchedOutline
      border-color: rgb(39, 37, 37)
    .MuiInputBase-input::placeholder 
      color: black !important;
      opacity: 1

.bodyTitle
  color: rgb(212, 203, 203)
  font-weight: bolder
  font-size: 450%
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
  transition: ease-in 0.5s

.searchTitle
  color: rgb(212, 203, 203)
  font-weight: bolder
  font-size: 150%
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
  transition: ease-in 0.5s

.movies
  margin: 3% 0% 0% 0%
  justify-content: space-evenly

.movieCard
  width:  330px
  height: 400px
  margin: 10px 0px
  position: relative;
  &:hover
    box-shadow 0px 0px 10px 5px rgb(145, 115, 115)
    cursor: pointer
    .movieInfo
      visibility: visible;

.movieTitle
  width: 100%
  height: 100%
  text-align: center
  margin-top: 50%


.movieInfo
  height: 100%
  width: 100%
  position: absolute  
  background: rgba(35, 36, 37, 0.72)
  color: #fff
  visibility: hidden
  transition: opacity .1s, visibility .1s
  display: flex
  flex-direction: column
  overflow: auto
  .MuiRating-iconEmpty
    color rgb(100, 98, 98)


.movieInfoText
  margin-top:5%
  margin-left: 2%
  flex-grow: 1

.trailerButton
  margin-top: -50px !important

.trailerButtonIcon
  font-size: 70px !important
  color: #fff !important

@keyframes fadein {
  from {opacity: 0;visibility: hidden}
  to { opacity: 1;visibility: visible}
}

@keyframes fadeout {
  from {opacity: 1;visibility: visible}
  to { opacity: 0;visibility: hidden}
}
  
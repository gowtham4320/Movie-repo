.App
  height: 100vh
  width: 100vw

$size = 5vh
$grbg1 = linear-gradient( 135deg, rgba(#FCCF31,1), rgba(#F55555,.95))
$grbg2 = linear-gradient( 135deg, rgba(#E2B0FF,1), rgba(#9F44D3,.95))
  
.loader
  position absolute
  width $size
  height $size
  top 50%
  left 50%
  margin-top -($size/2)
  margin-left -($size/2)
  perspective 60vh
  &:before, &:after
    content " "
    position absolute
    width 100%
    height 100%
    border-radius 50%
  &:before
    left -($size/1.5)
    background $grbg1
    transform translateZ(0vh)
    z-index 1
    animation rotation1 1.5s ease-out infinite
  &:after
    right -($size/1.5)
    background $grbg2
    transform translateZ(0vh)
    z-index 1
    animation rotation2 1.5s ease-out infinite
@keyframes rotation1
  25%
    left 0
    transform translateZ(-10vh)
  50%
    left ($size/1.5)
    transform translateZ(0vh)
  75%
    left 0
    transform translateZ(20vh)
    z-index 2
@keyframes rotation2
  25%
    right 0
    transform translateZ(20vh)
    z-index 2
  50%
    right ($size/1.5)
    transform translateZ(0vh)
  75%
    right 0
    transform translateZ(-10vh)

.snackbar
  visibility hidden
  min-width 250px
  margin-left -125px
  color #fff
  text-align center
  padding 16px
  position fixed
  z-index 1
  left 10%
  bottom 30px
  border-radius: 5px
  &.show
    visibility visible
    animation: fadein 0.8s, fadeout 0.8s 3s;
    &.SUCCESS
      background-color rgb(51, 170, 57)
      box-shadow 0px 0px 5px 1px rgb(92, 140, 48) 
    &.FAILURE
      background-color rgb(211, 47, 47) 
      box-shadow 0px 0px 5px 1px rgb(162, 37, 37) 
    

@keyframes fadein {
  from {bottom: 0; opacity: 0;}
  to {bottom: 30px; opacity: 1;}
}

@keyframes fadeout {
  from {bottom: 30px; opacity: 1;}
  to {bottom: 0; opacity: 0;}
}
  

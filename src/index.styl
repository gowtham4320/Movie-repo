*::-webkit-scrollbar
  height 10px
  width 10px

*::-webkit-scrollbar-track
  border-radius 5px
  background-color #303232
  &:hover
    background-color #4c4c4d
  &:active
    background-color #464b4c

*::-webkit-scrollbar-thumb
  border-radius 5px
  background-color #434943
  &:hover
    background-color #353534
  &:active
    background-color #636362